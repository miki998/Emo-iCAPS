journal = {Neuroimage},
keywords = {Brain development,DTI,Default mode network,Functional brain connectivity,Structural brain connectivity,development,fMRI,functional connectivity,structural connectivity},
mendeley-tags = {development,fMRI,functional connectivity,structural connectivity},
