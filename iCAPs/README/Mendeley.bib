journal = {IEEE Trans. Med. Imaging},
keywords = {Alzheimer's disease,Alzheimer's disease neuroimaging initiative (ADNI),Gaussian smoothing,nonnegative discriminative projection (NDP),optimally-discriminative voxel-based analysis,statistical parametric mapping,voxel-based morphometry},
number = {8},
pages = {1441--1454},
pmid = {21324774},
title = {{ODVBA: Optimally-discriminative voxel-based analysis}},
