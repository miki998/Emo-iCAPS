isbn = {1097-0193 (Electronic)1065-9471 (Linking)},
issn = {10970193},
journal = {Hum. Brain Mapp.},
keywords = {Artifacts removal,Brain functional networks,Group ICA,Group information guided ICA,Independent component analysis (ICA)},
