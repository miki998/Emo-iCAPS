file = {:Users/daniela/Dropbox/Mendeley{\_}Docs/Mennes et al/Mennes et al.{\_}2010{\_}Inter-individual differences in resting-state functional connectivity predict task-induced BOLD activity.pdf:pdf},
isbn = {1095-9572 (Electronic) 1053-8119 (Linking)},
