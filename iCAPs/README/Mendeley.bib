isbn = {1095-9572 (Electronic)$\backslash$n1053-8119 (Linking)},
issn = {10538119},
journal = {Neuroimage},
keywords = {FreeSurfer,MRI biomarkers,Reliability and power,Unbiased longitudinal image processing,Within-subject template,fMRI,longitudinal},
mendeley-tags = {FreeSurfer,fMRI,longitudinal},
number = {4},
pages = {1402--1418},
pmid = {22430496},
title = {{Within-subject template estimation for unbiased longitudinal image analysis}},
